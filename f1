#Exp2 Creation of primary key

CREATE TABLE UNIVERSITY (
university_id INT PRIMARY KEY,
name VARCHAR(100) NOT NULL
);

INSERT INTO UNIVERSITY (university_id, name) VALUES (1, 'Example University');
